extends layout

block content
	div.login(class=(username)?"hide":"")
		p The best way to manage your tasks
		p Never forget the cow (or anything else) again
		p Login now to manage your to-do list	
		form(name=userDetails)
			fieldset 
				legend Login
				label(for="userDetails.name") Username
				input(name="userDetails.name",placeholder="username",required)
				label(for="userDetails.password") Password
				input(name="userDetails.password",placeholder="password",required)
				br
				button#btnLogin(type="button") Login
	div.tasks(class=(username)?"":"hide")
		h1 
			span.name= username
			| 's to-do list
		if list.length > 0
			ul
				for item in list
					li=item
			span.nothing.hide
				| Nothing in your list
		else	
			ul
			span.nothing
				| Nothing in your list
		br
		input#toDo(placeHolder="to do", required)
		button#btnAdd Add